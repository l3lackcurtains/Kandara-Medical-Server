<div class="container">
    <div class="row">
        <div class="col s12">
            <div class="card" style="margin: 36px; padding: 18px;">
                <div class="study-box">
                    <h5>{{question}}</h5>
                </div>
                <form action="/upload-image?id={{_id}}" method="POST" enctype="multipart/form-data">
                    <div class="file-field input-field">
                        <div class="btn">
                            <span>Image</span>
                            <input type="file" name="image">
                        </div>
                        <div class="file-path-wrapper">
                            <input class="file-path validate" type="text">
                        </div>
                    </div>
                    <div class="input-field">
                        <button class="btn waves-effect waves-light" type="submit" name="action">
                            Upload
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>